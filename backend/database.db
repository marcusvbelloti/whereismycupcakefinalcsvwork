-- Create cart table
CREATE TABLE cart (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    cupcake_id INTEGER NOT NULL,
    FOREIGN KEY (cupcake_id) REFERENCES cupcakes (id)
);
